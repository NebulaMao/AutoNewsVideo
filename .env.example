# 大语言模型配置
LLM_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXX
LLM_BASE_URL=https://api.siliconflow.cn/v1  # 可选：用于自定义LLM端点
LLM_MODEL=deepseek-ai/DeepSeek-V3
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# 文本转语音配置
TTS_PROVIDER=siliconflow  # 选项：edge_tts, siliconflow
TTS_VOICE=FunAudioLLM/CosyVoice2-0.5B:alex  # 所选TTS提供商的语音
TTS_RATE=+0%
TTS_VOLUME=+0%

# WYTA API 用于获取免费的新闻内容
WHYTA_API_KEY=xxxxxxxx
# SiliconFlow TTS 配置（仅当 TTS_PROVIDER=siliconflow 时需要）
TTS_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXX
TTS_BASE_URL=https://api.siliconflow.cn/v1
TTS_MODEL=FunAudioLLM/CosyVoice2-0.5B